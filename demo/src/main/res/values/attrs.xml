    <attr name="title" format="string" />
    <attr name="content" format="string" />
    <attr name="hideDivider" format="boolean" />
    <attr name="hideTopPadding" format="boolean" />
    <attr name="hideRightArrow" format="boolean" />

    <declare-styleable name="SectionItemView">
        <attr name="title" />
        <attr name="hideDivider"/>
        <attr name="hideTopPadding"/>
