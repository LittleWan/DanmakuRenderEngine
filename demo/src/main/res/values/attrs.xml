    <declare-styleable name="TextItemView">
        <attr name="title"/>
        <attr name="content"/>
        <attr name="hideDivider"/>
        <attr name="hideRightArrow"/>
    </declare-styleable>

    <declare-styleable name="RatioRelativeLayout">
        <attr name="ratioHeightByWidth" format="float" />
    </declare-styleable>

</resources>
