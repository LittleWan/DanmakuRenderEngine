<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.bytedance.danmaku.render.engine.demo.demo.SimplestDemoActivity">

    <com.bytedance.danmaku.render.engine.demo.view.RatioRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:ratioHeightByWidth="0.5625" >

        <com.bytedance.danmaku.render.engine.demo.view.CustomVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.bytedance.danmaku.render.engine.DanmakuView
            android:id="@+id/danmaku_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.bytedance.danmaku.render.engine.demo.view.RatioRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="DebugConfig"
                tools:ignore="HardcodedText" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="CommonConfig"
                tools:ignore="HardcodedText" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_2_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_2_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_2_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="ScrollConfig"
                tools:ignore="HardcodedText" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="TopConfig"
                tools:ignore="HardcodedText" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_4_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_4_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="BottomConfig"
                tools:ignore="HardcodedText" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_5_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.bytedance.danmaku.render.engine.demo.view.RadioButtonGroupView
                android:id="@+id/config_5_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</LinearLayout>