<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".demo.SimplestDemoActivity">

    <com.ixigua.danmaku.render.engine.demo.view.RatioRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:ratioHeightByWidth="0.5625" >

        <com.ixigua.danmaku.render.engine.demo.view.CustomVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.ixigua.common.meteor.DanmakuView
            android:id="@+id/danmaku_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.ixigua.danmaku.render.engine.demo.view.RatioRelativeLayout>

    <com.ixigua.danmaku.render.engine.demo.view.ConsoleRecyclerView
        android:id="@+id/console_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>